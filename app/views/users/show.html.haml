.user-details
  %h1= @user.name

  %p
    %b Avatar:
    = image_tag @user.avatar.thumb, :class => 'avatar'
  %p
    %p
      = "Won: #{@user.won}" 
      = "Drew: #{@user.drew}"
      = "Lost: #{@user.lost}"

  %p
    = link_to 'Edit', edit_user_path(@user.id)
    = link_to 'Delete', user_path(@user.id), method: :delete


  = render :partial => 'games'

